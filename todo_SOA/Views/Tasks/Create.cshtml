
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>new tasks</title>
    <!-- include libraries(jQuery, bootstrap) -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>

    <!-- include summernote css/js -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.js"></script>

    <link rel="stylesheet" href="~/css/newtask.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="right-menu">
        <form asp-action="Create" asp-controller="Tasks">
            <label for="name">Task name:</label> <br>
            <input type="text" id="name" name="name" style="width:50%; height:30px;"><br><br>
            <label for="tag">Task tags:</label> <br>
            <input type="text" id="Tags" name="tags" style="width:50%; height: 30px;"><br><br>
            <label for="duetime">Task due time:</label><br>
            <input type="date" id="duetime" name="duetime" style="width:50%; height: 30px;"><br><br>
            <label for="description">Task description:</label> <br>
            <textarea id="summernote" name="description"></textarea><br><br>
            <script>
                $('#summernote').summernote(
                    {
                        placeholder: 'Hello Bootstrap 4',
                        tabsize: 2,
                        height: 100
                    }
                  );
            </script>
            <input type="submit" value="Save Task" style="font-size: 20px ; width: 150px; height: 30px; border-radius: 20px; background-color: chocolate;  ">
        </form>
    </div>
</body>
</html>